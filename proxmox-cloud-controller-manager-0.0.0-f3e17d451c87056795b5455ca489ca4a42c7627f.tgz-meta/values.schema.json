{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "affinity": {
            "type": "object"
        },
        "config": {
            "type": "object",
            "properties": {
                "clusters": {
                    "type": "array"
                },
                "features": {
                    "type": "object",
                    "properties": {
                        "provider": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "enabledControllers": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "existingConfigSecret": {
            "type": "null"
        },
        "existingConfigSecretKey": {
            "type": "string"
        },
        "extraArgs": {
            "type": "array"
        },
        "extraVolumeMounts": {
            "type": "array"
        },
        "extraVolumes": {
            "type": "array"
        },
        "fullnameOverride": {
            "type": "string"
        },
        "hostAliases": {
            "type": "array"
        },
        "image": {
            "type": "object",
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "imagePullSecrets": {
            "type": "array"
        },
        "initContainers": {
            "type": "array"
        },
        "logVerbosityLevel": {
            "type": "integer"
        },
        "nameOverride": {
            "type": "string"
        },
        "nodeSelector": {
            "type": "object"
        },
        "podAnnotations": {
            "type": "object"
        },
        "podSecurityContext": {
            "type": "object",
            "properties": {
                "fsGroup": {
                    "type": "integer"
                },
                "fsGroupChangePolicy": {
                    "type": "string"
                },
                "runAsGroup": {
                    "type": "integer"
                },
                "runAsNonRoot": {
                    "type": "boolean"
                },
                "runAsUser": {
                    "type": "integer"
                }
            }
        },
        "priorityClassName": {
            "type": "string"
        },
        "replicaCount": {
            "type": "integer"
        },
        "resources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "allowPrivilegeEscalation": {
                    "type": "boolean"
                },
                "capabilities": {
                    "type": "object",
                    "properties": {
                        "drop": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "seccompProfile": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object"
                },
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "tolerations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "effect": {
                        "type": "string"
                    },
                    "key": {
                        "type": "string"
                    },
                    "operator": {
                        "type": "string"
                    }
                }
            }
        },
        "updateStrategy": {
            "type": "object",
            "properties": {
                "rollingUpdate": {
                    "type": "object",
                    "properties": {
                        "maxUnavailable": {
                            "type": "integer"
                        }
                    }
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "useDaemonSet": {
            "type": "boolean"
        }
    }
}
