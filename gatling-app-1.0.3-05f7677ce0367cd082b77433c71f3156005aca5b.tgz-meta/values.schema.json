{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "image": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repo": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "job": {
            "type": "object",
            "properties": {
                "backoffLimit": {
                    "type": "integer"
                },
                "completions": {
                    "type": "integer"
                },
                "parallelism": {
                    "type": "integer"
                }
            }
        },
        "name": {
            "type": "string"
        },
        "nodeAffinity": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "selector": {
                    "type": "object"
                }
            }
        },
        "pod": {
            "type": "object",
            "properties": {
                "groupID": {
                    "type": "integer"
                },
                "restartPolicy": {
                    "type": "string"
                },
                "userID": {
                    "type": "integer"
                }
            }
        },
        "simulation": {
            "type": "object",
            "properties": {
                "configMap": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "filename": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            }
        }
    }
}
